{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/LitCalTest",
    "definitions": {
        "LitCalTest": {
            "oneOf": [
                { "$ref": "#/definitions/ExactCorrespondenceType" },
                { "$ref": "#/definitions/ExactCorrespondenceSinceUntilType" }
            ]
        },
        "AppliesToOrExcludes": {
            "type": "object",
            "minProperties": 1,
            "properties": {
                "nationalcalendar": {
                    "type": "string"
                },
                "diocesancalendar": {
                    "type": "string"
                },
                "nationalcalendars": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "diocesancalendars": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "anyOf": [
                { "required": ["nationalcalendar"] },
                { "required": ["nationalcalendars"] },
                { "required": ["diocesancalendar"] },
                { "required": ["diocesancalendars"] }
            ],
            "additionalProperties": false
        },
        "ExactCorrespondenceType": {
            "type": "object",
            "properties": {
                "name" : {
                    "type": "string",
                    "pattern": "^[A-Z][a-zA-Z0-9]+Test$"
                },
                "eventkey": {
                    "type": "string",
                    "pattern": "^[A-Z][a-zA-Z0-9]+$"
                },
                "description": {
                    "type": "string"
                },
                "testType": {
                    "type": "string",
                    "enum": [
                        "exactCorrespondence",
                        "variableCorrespondence"
                    ]
                },
                "appliesTo": {
                    "$ref": "#/definitions/AppliesToOrExcludes"
                },
                "excludes": {
                    "$ref": "#/definitions/AppliesToOrExcludes"
                },
                "assertions": {
                    "$ref": "#/definitions/Assertions"
                }
            },
            "required": [ "name", "eventkey", "description", "testType", "assertions" ],
            "additionalProperties": false
        },
        "ExactCorrespondenceSinceUntilType": {
            "type": "object",
            "properties": {
                "name" : {
                    "type": "string",
                    "pattern": "^[A-Z][a-zA-Z0-9]+Test$"
                },
                "eventkey": {
                    "type": "string",
                    "pattern": "^[A-Z][a-zA-Z0-9]+$"
                },
                "description": {
                    "type": "string"
                },
                "testType": {
                    "type": "string",
                    "enum": [
                        "exactCorrespondenceSince",
                        "exactCorrespondenceUntil"
                    ]
                },
                "yearSince": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Year"
                },
                "yearUntil": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Year"
                },
                "appliesTo": {
                    "$ref": "#/definitions/AppliesToOrExcludes"
                },
                "excludes": {
                    "$ref": "#/definitions/AppliesToOrExcludes"
                },
                "assertions": {
                    "$ref": "#/definitions/Assertions"
                }
            },
            "oneOf": [
                {"required": [ "name", "eventkey", "description", "testType", "assertions", "yearSince" ]},
                {"required": [ "name", "eventkey", "description", "testType", "assertions", "yearUntil" ]}
            ],
            "additionalProperties": false
        },
        "Assertions": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "year": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Year"
                            },
                            "expectedValue": {
                                "type": "null"
                            },
                            "assert": {
                                "type": "string",
                                "const": "eventNotExists"
                            },
                            "assertion": {
                                "type": "string"
                            },
                            "comment": {
                                "type": "string"
                            }
                        },
                        "required": [ "year", "expectedValue", "assert", "assertion" ],
                        "additionalProperties": false
                    },
                    {
                        "type": "object",
                        "properties": {
                            "year": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Year"
                            },
                            "expectedValue": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Timestamp"
                            },
                            "assert": {
                                "type": "string",
                                "const": "eventExists AND hasExpectedTimestamp"
                            },
                            "assertion": {
                                "type": "string"
                            },
                            "comment": {
                                "type": "string"
                            }
                        },
                        "required": [ "year", "expectedValue", "assert", "assertion" ],
                        "additionalProperties": false
                    }
                ]
            }
        }
    }
}
