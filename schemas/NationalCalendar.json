{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NationalCalendar",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "litcal": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/LitCal"
            }
        },
        "settings": {
            "$ref": "#/definitions/Settings"
        },
        "metadata": {
            "$ref": "#/definitions/NationalCalendarMetadata"
        }
    },
    "required": [
        "litcal",
        "metadata",
        "settings"
    ],
    "definitions": {
        "LitCal": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "festivity": {
                    "$ref": "#/definitions/Festivity"
                },
                "metadata": {
                    "$ref": "#/definitions/LitCalMetadata"
                }
            },
            "required": [
                "festivity",
                "metadata"
            ],
            "title": "LitCal"
        },
        "Festivity": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "event_key": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "color": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/LitColor"
                },
                "grade": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/LitGrade"
                },
                "day": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Day"
                },
                "month": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Month"
                },
                "common": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/LitCommon"
                },
                "readings": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Readings"
                },
                "strtotime": {
                    "type": "string",
                    "description": "supports PHP strtotime string format"
                }
            },
            "anyOf": [
                {
                    "required": [
                        "day",
                        "month",
                        "name",
                        "event_key"
                    ]
                },
                {
                    "required": [
                        "strtotime",
                        "name",
                        "event_key",
                        "common",
                        "color",
                        "grade"
                    ]
                }
            ],
            "title": "Festivity"
        },
        "LitCalMetadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "action": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/NationalCalendarAction"
                },
                "since_year": {
                    "type": "integer"
                },
                "until_year": {
                    "type": "integer"
                },
                "missal": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Missal"
                },
                "reason": {
                    "type": "string"
                },
                "property": {
                    "type": "string",
                    "enum": [
                        "name",
                        "grade"
                    ]
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [
                "action",
                "since_year"
            ],
            "title": "LitCalMetadata"
        },
        "NationalCalendarMetadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "region": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Region"
                },
                "wider_region": {
                    "$ref": "#/definitions/WiderRegion"
                },
                "missals": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Missals"
                }
            },
            "required": [
                "missals",
                "region",
                "wider_region"
            ],
            "title": "NationalCalendarMetadata"
        },
        "WiderRegion": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "json_file": {
                    "type": "string"
                },
                "i18n_file": {
                    "type": "string"
                }
            },
            "required": [
                "i18n_file",
                "json_file",
                "name"
            ],
            "title": "WiderRegion"
        },
        "Settings": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "epiphany": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Epiphany"
                },
                "ascension": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Ascension"
                },
                "corpus_christi": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/CorpusChristi"
                },
                "eternal_high_priest": {
                    "type": "boolean"
                },
                "locale": {
                    "type": "string"
                }
            },
            "required": [
                "ascension",
                "corpuschristi",
                "epiphany",
                "locale"
            ],
            "title": "Settings"
        }
    }
}
