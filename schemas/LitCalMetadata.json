{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LitCalMetadata",
    "type": "object",
    "properties": {
        "litcal_metadata": {
            "$ref": "#/definitions/LitCalMetadata"
        }
    },
    "required": [
        "litcal_metadata"
    ],
    "additionalProperties": false,
    "definitions": {
        "LitCalMetadata": {
            "type": "object",
            "properties": {
                "national_calendars": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "calendar_id": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Region"
                            },
                            "country_iso": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/CountryISO"
                            },
                            "missals": {
                                "type": "array",
                                "items": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/MissalID"
                                }
                            },
                            "wider_regions": {
                                "type": "array",
                                "items": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/WiderRegionNames"
                                }
                            },
                            "dioceses": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "pattern": "^[A-Z]+$"
                                }
                            },
                            "settings": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/CalendarSettings"
                            }
                        },
                        "required": ["calendar_id", "country_iso", "missals"]
                    }
                },
                "national_calendars_keys": {
                    "type": "array",
                    "items": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Region"
                    }
                },
                "diocesan_calendars": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "calendar_id": {
                                "type": "string",
                                "pattern": "^[A-Z]+$",
                                "description": "uppercase normalized string from the name of the diocese, without any spaces or special characters"
                            },
                            "nation": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Region"
                            },
                            "diocese": {
                                "type": "string"
                            },
                            "group": {
                                "type": "string"
                            },
                            "settings": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/CalendarSettings"
                            }
                        },
                        "required": [
                            "calendar_id",
                            "nation",
                            "diocese"
                        ]
                    }
                },
                "diocesan_calendars_keys": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[A-Z]+$",
                        "description": "uppercase normalized string from the name of the diocese, without any spaces or special characters"
                    }
                },
                "diocesan_groups": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "group_name": {
                                "type": "string"
                            },
                            "dioceses": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "pattern": "^[A-Z]+$"
                                }
                            }
                        },
                        "required": ["group_name", "dioceses"]
                    }
                },
                "wider_regions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/WiderRegionDef"
                    }
                },
                "wider_regions_keys": {
                    "type": "array",
                    "items": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/WiderRegionNames"
                    }
                }
            },
            "required": [
                "national_calendars",
                "national_calendars_keys",
                "diocesan_calendars",
                "diocesan_calendars_keys",
                "diocesan_groups",
                "wider_regions",
                "wider_regions_keys"
            ],
            "additionalProperties": false
        },
        "WiderRegionDef": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/WiderRegionNames"
                },
                "languages": {
                    "type": "array",
                    "items": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Locale"
                    }
                },
                "data_path": {
                    "type": "string",
                    "pattern": "^nations/[ACEINOSW][flmnsueoc][rseatindo][a-zA-Z\\s]+.json$"
                },
                "i18n_path": {
                    "type": "string",
                    "pattern": "^nations/[ACEINOSW][FLMNSUEOC][RSEATINDO][A-Z\\s]+$"
                },
                "api_path": {
                    "type": "string",
                    "pattern": "^https:\\\/\\\/litcal\\.johnromanodorazio\\.com\\\/api\\\/dev\\\/data\\\/widerregion\\\/[ACEINOSW][flmnsueoc][rseatindo][a-zA-Z\\s]+\\?locale=\\{language\\}$"
                }
            },
            "required": ["name", "languages", "data_path", "i18n_path", "api_path"]
        }
    }
}
