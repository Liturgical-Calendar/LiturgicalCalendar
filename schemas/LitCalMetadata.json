{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LitCalMetadata",
    "type": "object",
    "properties": {
        "litcal_metadata": {
            "$ref": "#/definitions/LitCalMetadata"
        }
    },
    "required": [
        "litcal_metadata"
    ],
    "additionalProperties": false,
    "definitions": {
        "LitCalMetadata": {
            "type": "object",
            "properties": {
                "national_calendars": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "calendar_id": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Region"
                            },
                            "missals": {
                                "type": "array",
                                "items": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Missal"
                                }
                            },
                            "wider_regions": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/WiderRegionNames"
                                }
                            },
                            "dioceses": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "pattern": "^[A-Z]+$"
                                }
                            },
                            "settings": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "epiphany": {
                                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Epiphany"
                                    },
                                    "ascension": {
                                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Ascension"
                                    },
                                    "corpus_christi": {
                                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/CorpusChristi"
                                    },
                                    "locale": {
                                        "type": "string"
                                    },
                                    "eternal_high_priest": {
                                        "type": "boolean"
                                    }
                                }
                            }
                        },
                        "required": ["calendar_id", "missals"]
                    }
                },
                "national_calendars_keys": {
                    "type": "array",
                    "items": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Region"
                    }
                },
                "diocesan_calendars": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "calendar_id": {
                                "type": "string",
                                "pattern": "^[A-Z]+$",
                                "description": "uppercase normalized string from the name of the diocese, without any spaces or special characters"
                            },
                            "nation": {
                                "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Region"
                            },
                            "diocese": {
                                "type": "string"
                            },
                            "group": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "calendar_id",
                            "nation",
                            "diocese"
                        ]
                    }
                },
                "diocesan_calendars_keys": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[A-Z]+$",
                        "description": "uppercase normalized string from the name of the diocese, without any spaces or special characters"
                    }
                },
                "diocesan_groups": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "additionalProperties": false,
                        "properties": {
                            "group_name": {
                                "type": "string"
                            },
                            "dioceses": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "pattern": "^[A-Z]+$"
                                }
                            }
                        },
                        "required": ["group_name", "dioceses"]
                    }
                },
                "wider_regions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/WiderRegionDef"
                    }
                },
                "wider_regions_keys": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/WiderRegionNames"
                    }
                },
                "roman_missals": {
                    "type": "object",
                    "propertyNames": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/MissalDef"
                    },
                    "patternProperties": {
                        "": {
                            "type": "object",
                            "properties": {
                                "missal_id": {
                                    "type": "string",
                                    "pattern": "^(EDITIO_TYPICA|ITALY|USA|NETHERLANDS)_(19[7-9]|[2-9][0-9][0-9])[0-9]$"
                                },
                                "name": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/MissalName"
                                },
                                "data_path": {
                                    "oneOf": [
                                        {
                                            "type": "string",
                                            "pattern": "^data\\\/propriumdesanctis_(ITALY_|USA_|NETHERLANDS_)?(19[7-9]|20[0-9])[0-9]\\\/propriumdesanctis_(ITALY_|USA_|NETHERLANDS_)?(19[7-9]|20[0-9])[0-9]\\.json$"
                                        },
                                        {
                                            "type": "boolean",
                                            "enum": [false]
                                        }
                                    ]
                                },
                                "i18n_path": {
                                    "oneOf": [
                                        {
                                            "type": "string",
                                            "pattern": "^data\\\/propriumdesanctis_(ITALY_|USA_|NETHERLANDS_)?(19[7-9]|20[0-9])[0-9]\\\/i18n\\\/$"
                                        },
                                        {
                                            "type": "boolean",
                                            "enum": [false]
                                        }
                                    ]
                                },
                                "year_limits": {
                                    "type": "object",
                                    "properties": {
                                        "since_year": {
                                            "type": "integer"
                                        },
                                        "until_year": {
                                            "type": "integer"
                                        }
                                    },
                                    "required": [ "since_year" ],
                                    "additionalProperties": false
                                },
                                "year_published": {
                                    "type": "integer",
                                    "minimum": 1970,
                                    "maximum": 9999
                                }
                            },
                            "required": [
                                "missal_id",
                                "name",
                                "data_path",
                                "i18n_path",
                                "year_limits",
                                "year_published"
                            ],
                            "additionalProperties": false
                        }
                    }
                }
            },
            "required": [
                "national_calendars",
                "national_calendars_keys",
                "diocesan_calendars",
                "diocesan_calendars_keys",
                "diocesan_groups",
                "wider_regions",
                "wider_regions_keys",
                "roman_missals"
            ],
            "additionalProperties": false
        },
        "WiderRegionDef": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "$ref": "#/definitions/WiderRegionNames"
                },
                "languages": {
                    "type": "array",
                    "items": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Locale"
                    }
                },
                "data_path": {
                    "type": "string",
                    "pattern": "^nations/[ACEINOSW][flmnsueoc][rseatindo][a-zA-Z\\s]+.json$"
                },
                "i18n_path": {
                    "type": "string",
                    "pattern": "^nations/[ACEINOSW][FLMNSUEOC][RSEATINDO][A-Z\\s]+$"
                },
                "api_path": {
                    "type": "string",
                    "pattern": "^https:\\\/\\\/litcal\\.johnromanodorazio\\.com\\\/api\\\/v9\\\/data\\\/widerregion\\\/[ACEINOSW][flmnsueoc][rseatindo][a-zA-Z\\s]+\\?locale=\\{language\\}$"
                }
            },
            "required": ["name", "languages", "data_path", "i18n_path", "api_path"]
        },
        "WiderRegionNames": {
            "type": "string",
            "enum": [
                "Africa",
                "Alsace",
                "Americas",
                "Anatolia",
                "Antarctica",
                "Asia",
                "Australasia",
                "Central Africa",
                "Central America",
                "Europe",
                "Indies",
                "North Africa",
                "Oceania",
                "Scandinavia",
                "South America",
                "West Indies"
            ]
        }
    }
}
