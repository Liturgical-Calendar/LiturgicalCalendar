{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LitCalMetadata",
    "type": "object",
    "properties": {
        "litcal_metadata": {
            "$ref": "#/definitions/LitCalMetadata"
        }
    },
    "required": [
        "litcal_metadata"
    ],
    "additionalProperties": false,
    "definitions": {
        "LitCalMetadata": {
            "type": "object",
            "properties": {
                "national_calendars": {
                    "type": "object",
                    "propertyNames": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Region"
                    },
                    "patternProperties": {
                        "": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "national_calendars_metadata": {
                    "type": "object",
                    "additionalProperties": false,
                    "propertyNames": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Region"
                    },
                    "patternProperties": {
                        "": {
                            "type": "object",
                            "properties": {
                                "missals": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Missal"
                                    }
                                },
                                "wider_regions": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/WiderRegionDef"
                                    }
                                },
                                "dioceses": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "settings": {
                                    "type": "object",
                                    "properties": {
                                        "epiphany": {
                                            "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Epiphany"
                                        },
                                        "ascension": {
                                            "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Ascension"
                                        },
                                        "corpuschristi": {
                                            "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/CorpusChristi"
                                        },
                                        "locale": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "diocesan_calendars": {
                    "type": "object",
                    "patternProperties": {
                        "": {
                            "type": "object",
                            "properties": {
                                "nation": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Region"
                                },
                                "diocese": {
                                    "type": "string"
                                },
                                "group": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "nation",
                                "diocese"
                            ]
                        }
                    }
                },
                "diocesan_groups": {
                    "type": "object",
                    "patternProperties": {
                        "": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "wider_regions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/WiderRegionDef"
                    }
                },
                "roman_missals": {
                    "type": "object",
                    "propertyNames": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/MissalDef"
                    },
                    "patternProperties": {
                        "": {
                            "type": "object",
                            "properties": {
                                "value": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Missal"
                                },
                                "name": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/MissalName"
                                },
                                "sanctorale_filename": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/MissalFileName"
                                },
                                "year_limits": {
                                    "type": "object",
                                    "properties": {
                                        "since_year": {
                                            "type": "integer"
                                        },
                                        "until_year": {
                                            "type": "integer"
                                        }
                                    },
                                    "required": [ "since_year" ],
                                    "additionalProperties": false
                                }
                            },
                            "required": [
                                "value",
                                "name",
                                "sanctorale_filename",
                                "year_limits"
                            ],
                            "additionalProperties": false
                        }
                    }
                }
            },
            "required": [
                "national_calendars",
                "national_calendars_metadata",
                "diocesan_calendars",
                "diocesan_groups",
                "wider_regions",
                "roman_missals"
            ],
            "additionalProperties": false
        },
        "WiderRegionDef": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "enum": [
                        "Africa",
                        "Alsace",
                        "Americas",
                        "Anatolia",
                        "Antarctica",
                        "Asia",
                        "Australasia",
                        "Central Africa",
                        "Central America",
                        "Europe",
                        "Indies",
                        "North Africa",
                        "Oceania",
                        "Scandinavia",
                        "South America",
                        "West Indies"
                    ]
                },
                "languages": {
                    "type": "array",
                    "items": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Locale"
                    }
                },
                "data_path": {
                    "type": "string",
                    "pattern": "^nations/[ACEINOSW][flmnsueoc][rseatindo][a-zA-Z\\s]+.json$"
                },
                "i18n_path": {
                    "type": "string",
                    "pattern": "^nations/[ACEINOSW][FLMNSUEOC][RSEATINDO][A-Z\\s]+$"
                },
                "api_path": {
                    "type": "string",
                    "pattern": "^https:\\\/\\\/litcal\\.johnromanodorazio\\.com\\\/api\\\/v9\\\/data\\\/widerregion\\\/[ACEINOSW][flmnsueoc][rseatindo][a-zA-Z\\s]+\\?locale=\\{language\\}$"
                }
            },
            "required": ["name", "languages", "data_path", "i18n_path", "api_path"]
        }
    }
}
