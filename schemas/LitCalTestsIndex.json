{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/LitCalTestsIndex",
    "definitions": {
        "LitCalTestsIndex": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name" : {
                        "type": "string",
                        "pattern": "^[A-Z][a-zA-Z0-9]+Test$"
                    },
                    "eventkey": {
                        "type": "string",
                        "pattern": "^[A-Z][a-zA-Z0-9]+$"
                    },
                    "description": {
                        "type": "string"
                    },
                    "testType": {
                        "type": "string",
                        "enum": [
                            "exactCorrespondence",
                            "exactCorrespondenceSince",
                            "variableCorrespondence"
                        ]
                    },
                    "appliesTo": {
                        "$ref": "#/definitions/AppliesToOrExcludes"
                    },
                    "excludes": {
                        "$ref": "#/definitions/AppliesToOrExcludes"
                    },
                    "assertions": {
                        "type": "array",
                        "items": {
                            "anyOf": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "year": {
                                            "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Year"
                                        },
                                        "expectedValue": {
                                            "type": "null"
                                        },
                                        "assert": {
                                            "type": "string",
                                            "enum": [ "eventNotExists" ]
                                        },
                                        "assertion": {
                                            "type": "string"
                                        },
                                        "comment": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [ "year", "expectedValue", "assert", "assertion" ],
                                    "additionalProperties": false
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "year": {
                                            "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Year"
                                        },
                                        "expectedValue": {
                                            "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Timestamp"
                                        },
                                        "assert": {
                                            "type": "string",
                                            "enum": [ "eventExists AND hasExpectedTimestamp" ]
                                        },
                                        "assertion": {
                                            "type": "string"
                                        },
                                        "comment": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [ "year", "expectedValue", "assert", "assertion" ],
                                    "additionalProperties": false
                                }
                            ]
                        }
                    }
                },
                "required": [ "name", "eventkey", "description", "testType", "assertions" ],
                "additionalProperties": false
            }
        },
        "AppliesToOrExcludes": {
            "type": "object",
            "minProperties": 1,
            "properties": {
                "nationalcalendar": {
                    "type": "string"
                },
                "diocesancalendar": {
                    "type": "string"
                },
                "nationalcalendars": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "diocesancalendars": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "anyOf": [
                { "required": ["nationalcalendar"] },
                { "required": ["nationalcalendars"] },
                { "required": ["diocesancalendar"] },
                { "required": ["diocesancalendars"] }
            ],
            "additionalProperties": false
        }
    }
}
