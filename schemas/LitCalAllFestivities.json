{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LitCalAllFestivities",
    "type": "object",
    "properties": {
        "litcal_events": {
            "$ref": "#/definitions/LitCalAllFestivities"
        },
        "settings": {
            "type": "object",
            "oneOf": [
              {
                "properties": {
                  "locale": {
                    "type": "string",
                    "pattern": "^[a-z][a-z]$",
                    "description": "indicates the locale used to produce localized data in LitCalAllFestivities"
                  },
                  "national_calendar": {
                    "type": "string",
                    "pattern": "^[A-Z]{3,45}$",
                    "description": "indicates the National Calendar used to produce the data in LitCalAllFestivities"
                  },
                  "diocesan_calendar": {
                    "type": "string",
                    "pattern": "^[A-Z]{3,45}$",
                    "description": "indicates the Diocesan Calendar used to produce the data in LitCalAllFestivities"
                  }
                },
                "additionalProperties": false
              },
              {
                "properties": {
                  "locale": {
                    "type": "string",
                    "pattern": "^[a-z][a-z]$",
                    "description": "indicates the locale used to produce localized data in LitCalAllFestivities"
                  },
                  "national_calendar": {
                    "type": "string",
                    "pattern": "^[A-Z]{3,45}$",
                    "description": "indicates the National Calendar used to produce the data in LitCalAllFestivities"
                  },
                  "diocesan_calendar": {
                    "type": "null"
                  }
                },
                "additionalProperties": false
              },
              {
                "properties": {
                  "locale": {
                    "type": "string",
                    "pattern": "^[a-z][a-z]$",
                    "description": "indicates the locale used to produce localized data in LitCalAllFestivities"
                  },
                  "national_calendar": {
                    "type": "null"
                  },
                  "diocesan_calendar": {
                    "type": "null"
                  }
                },
                "additionalProperties": false
              }
            ]
        }
    },
    "required": [
        "litcal_events",
        "settings"
    ],
    "additionalProperties": false,
    "definitions": {
        "LitCalAllFestivities": {
            "type": "object",
            "patternProperties": {
              "^[A-Z](?:[A-Z]+_)*[a-zA-Z1-9]+[0-9]{0,2}(?:_vigil)?$": {
                "type": "object",
                "properties": {
                  "month": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 1,
                    "maximum": 12
                  },
                  "day": {
                    "type": "integer",
                    "format": "int32",
                    "minimum": 1,
                    "maximum": 31
                  },
                  "event_key": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/EventKey"
                  },
                  "grade": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/LitGrade"
                  },
                  "grade_lcl": {
                    "type": "string"
                  },
                  "display_grade": {
                    "type": "string"
                  },
                  "common": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/LitCommon"
                  },
                  "common_lcl": {
                    "type": "string"
                  },
                  "calendar": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Calendar"
                  },
                  "color": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/LitColor"
                  },
                  "readings": {
                    "anyOf": [
                        {
                            "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Readings"
                        },
                        {
                            "type": "object",
                            "properties": {
                                "vigil": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Readings"
                                },
                                "day": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/Readings"
                                }
                            },
                            "additionalProperties": false
                        }
                    ]
                  },
                  "name": {
                    "type": "string",
                    "description": "The actual name of the liturgical event as defined in the latest edition of the source Roman Missal indicated in the key `MISSAL` (i.e. if the Missal is the Latin edition of the Roman Missal, the name should be from the latest edition of the Latin Roman Missal)"
                  },
                  "type": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/v9/schemas/CommonDef.json#/definitions/LitFeastType"
                  },
                  "missal": {
                    "type": "string",
                    "enum": [ "VATICAN_1970", "VATICAN_2002", "VATICAN_2008", "USA_2011", "ITALY_1983" ],
                    "description": "When a liturgical event is defined in a Roman Missal, this property will be present with an indication of the Roman Missal in question"
                  },
                  "decree": {
                    "type": "string",
                    "description": "When a liturgical event is defined ex-novo by a decree of the Congregation of Divine Worship rather than by a Roman Missal, this property will be present with a reference to the decree"
                  },
                  "strtotime": {
                    "type": "string"
                  }
                },
                "additionalProperties": false,
                "required": [ "event_key", "grade", "common", "common_lcl", "color", "name", "grade_lcl" ]
              }
            }
        }
    }
}
