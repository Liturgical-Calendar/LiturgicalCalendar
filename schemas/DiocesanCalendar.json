{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DiocesanCalendar",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "litcal": {
            "$ref": "#/definitions/LitCal"
        },
        "overrides": {
            "$ref": "#/definitions/Overrides"
        }
    },
    "required": [
        "litcal"
    ],
    "definitions": {
        "LitCal": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[A-Z](?:[A-Z]+_)*[a-zA-Z1-9]+[0-9]{0,2}(?:_vigil|_[0-9])?$": {
                    "type": "object",
                    "properties": {
                        "festivity": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "color": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/LitColor"
                                },
                                "grade": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/LitGrade"
                                },
                                "common": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/LitCommon"
                                },
                                "day": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Day"
                                },
                                "month": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Month"
                                },
                                "readings": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/Readings"
                                }
                            },
                            "required": [
                                "name",
                                "color",
                                "grade",
                                "common"
                            ]
                        },
                        "metadata": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "form_rownum": {
                                    "type": "integer"
                                },
                                "since_year": {
                                    "type": "integer",
                                    "minimum": 1970
                                },
                                "until_year": {
                                    "type": "integer",
                                    "maximum": 9999
                                },
                                "strtotime": {
                                    "type": "string"
                                },
                                "url": {
                                    "type": "string",
                                    "format": "uri"
                                }
                            },
                            "required": [
                                "form_rownum",
                                "since_year"
                            ]
                        }
                    },
                    "required": [
                        "festivity",
                        "metadata"
                    ]
                }
            },
            "title": "LitCal"
        },
        "Overrides": {
            "$ref": "https://litcal.johnromanodorazio.com/api/dev/schemas/CommonDef.json#/definitions/CalendarSettings",
            "title": "Overrides"
        }
    }
}
