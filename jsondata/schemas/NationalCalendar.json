{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "NationalCalendar",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "litcal": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/LitCalCreateNew"
                    },
                    {
                        "$ref": "#/definitions/LitCalSetProperty"
                    },
                    {
                        "$ref": "#/definitions/LitCalMoveFestivity"
                    },
                    {
                        "$ref": "#/definitions/LitCalMakePatron"
                    }
                ]
            }
        },
        "settings": {
            "$ref": "#/definitions/Settings"
        },
        "metadata": {
            "$ref": "#/definitions/NationalCalendarMetadata"
        }
    },
    "required": [
        "litcal",
        "metadata",
        "settings"
    ],
    "definitions": {
        "LitCalCreateNew": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "festivity": {
                    "$ref": "#/definitions/FestivityCreateNew"
                },
                "metadata": {
                    "$ref": "#/definitions/LitCalMetadataCreateNew"
                }
            },
            "required": [
                "festivity",
                "metadata"
            ],
            "title": "LitCalCreateNew"
        },
        "FestivityCreateNew": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "event_key": {
                    "type": "string"
                },
                "color": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/LitColor"
                },
                "grade": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/LitGrade"
                },
                "day": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/Day"
                },
                "month": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/Month"
                },
                "common": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/LitCommon"
                },
                "readings": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/Readings"
                },
                "strtotime": {
                    "type": "string",
                    "description": "supports PHP strtotime string format"
                },
                "name": {
                    "type": "string",
                    "description": "should only be present on /events path, not in original resource where it will be present in the i18n file"
                }
            },
            "oneOf": [
                {
                    "required": [
                        "day",
                        "month",
                        "event_key",
                        "common",
                        "grade",
                        "color"
                    ]
                },
                {
                    "required": [
                        "strtotime",
                        "event_key",
                        "common",
                        "grade",
                        "color"
                    ]
                }
            ],
            "title": "Festivity"
        },
        "LitCalMetadataCreateNew": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "action": {
                    "type": "string",
                    "const": "createNew"
                },
                "since_year": {
                    "type": "integer"
                },
                "until_year": {
                    "type": "integer"
                }
            },
            "required": [
                "action",
                "since_year"
            ],
            "title": "LitCalMetadataCreateNew"
        },
        "LitCalSetProperty": {
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "festivity": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "event_key": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/EventKey"
                                },
                                "name": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "event_key",
                                "name"
                            ]
                        },
                        "metadata": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "since_year": {
                                    "type": "integer"
                                },
                                "until_year": {
                                    "type": "integer"
                                },
                                "action": {
                                    "type": "string",
                                    "const": "setProperty"
                                },
                                "property": {
                                    "type": "string",
                                    "const": "name"
                                }
                            },
                            "required": [
                                "action",
                                "since_year",
                                "property"
                            ]
                        }
                    },
                    "required": [
                        "festivity",
                        "metadata"
                    ],
                    "title": "LitCalSetNameProperty"
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "festivity": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "event_key": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/EventKey"
                                },
                                "grade": {
                                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/LitGrade"
                                }
                            },
                            "required": [
                                "event_key",
                                "grade"
                            ]
                        },
                        "metadata": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "since_year": {
                                    "type": "integer"
                                },
                                "until_year": {
                                    "type": "integer"
                                },
                                "action": {
                                    "type": "string",
                                    "const": "setProperty"
                                },
                                "property": {
                                    "type": "string",
                                    "const": "grade"
                                }
                            },
                            "required": [
                                "action",
                                "since_year",
                                "property"
                            ]
                        }
                    },
                    "required": [
                        "festivity",
                        "metadata"
                    ],
                    "title": "LitCalSetGradeProperty"
                }
            ]
        },
        "LitCalMoveFestivity": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "festivity": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "event_key": {
                            "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/EventKey"
                        },
                        "month": {
                            "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/Month"
                        },
                        "day": {
                            "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/Day"
                        }
                    },
                    "required": [
                        "event_key",
                        "month",
                        "day"
                    ]
                },
                "metadata": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "since_year": {
                            "type": "integer"
                        },
                        "until_year": {
                            "type": "integer"
                        },
                        "action": {
                            "type": "string",
                            "const": "moveFestivity"
                        },
                        "missal": {
                            "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/MissalID"
                        },
                        "reason": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "action",
                        "since_year",
                        "missal",
                        "reason"
                    ]
                }
            },
            "required": [
                "festivity",
                "metadata"
            ],
            "title": "LitCalMoveFestivity"
        },
        "LitCalMakePatron": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "festivity": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "event_key": {
                            "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/EventKey"
                        },
                        "grade": {
                            "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/LitGrade"
                        },
                        "name": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "event_key",
                        "grade"
                    ]
                },
                "metadata": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "since_year": {
                            "type": "integer"
                        },
                        "until_year": {
                            "type": "integer"
                        },
                        "action": {
                            "type": "string",
                            "const": "makePatron"
                        },
                        "url": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [
                        "action",
                        "since_year"
                    ]
                }
            },
            "required": [
                "festivity",
                "metadata"
            ],
            "title": "LitCalMakePatron"
        },
        "NationalCalendarMetadata": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "nation": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/Nation"
                },
                "locales": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/Locale"
                    }
                },
                "wider_region": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/WiderRegionNames"
                },
                "missals": {
                    "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/Missals"
                }
            },
            "required": [
                "nation",
                "locales",
                "wider_region",
                "missals"
            ],
            "title": "NationalCalendarMetadata"
        },
        "Settings": {
            "$ref": "https://litcal.johnromanodorazio.com/api/dev/jsondata/schemas/CommonDef.json#/definitions/CalendarSettings",
            "title": "Settings"
        }
    }
}
